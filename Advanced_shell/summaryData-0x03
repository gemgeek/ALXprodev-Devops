#!/bin/bash

INPUT_DIR="pokemon_data"
CSV_FILE="pokemon_report.csv"

echo "Name,Height (m),Weight (kg)" > "$CSV_FILE"

for file in "$INPUT_DIR"/*.json
do
    name=$(jq -r '.name' "$file")
    height=$(jq -r '.height' "$file")
    weight=$(jq -r '.weight' "$file")

    capitalized_name=$(echo "$name" | sed 's/./\u&/')

    height_m=$(echo "$height" | awk '{printf "%.1f", $1/10}')
    weight_kg=$(echo "$weight" | awk '{printf "%.1f", $1/10}')

    echo "$capitalized_name,$height_m,$weight_kg" >> "$CSV_FILE"
done

echo "CSV Report generated at: $CSV_FILE"
echo

cat "$CSV_FILE"
echo

awk -F',' 'NR > 1 { total_height += $2; total_weight += $3; count++ } END { printf "Average Height: %.2f m\n", total_height/count; printf "Average Weight: %.2f kg\n", total_weight/count }' "$CSV_FILE"